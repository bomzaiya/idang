<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/serviceScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="@string/empty_description"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_centerHorizontal="true"
        android:hint="@string/dialog_password_hint"
        android:inputType="textPassword"
        android:textSize="16sp" >

        <requestFocus />
    </EditText>

    <RelativeLayout
        android:id="@+id/layoutRoomControlMoodDialogButton"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/etPassword"
        android:gravity="center" >

        <Button
            android:id="@+id/buttonOk"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/roomcontrol_mood_dialog_button_ok" />

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/buttonOk"
            android:text="@string/roomcontrol_mood_dialog_button_cancel" />
    </RelativeLayout>

</RelativeLayout>